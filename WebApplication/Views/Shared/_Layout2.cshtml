
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> @ViewBag.Title - Optimizing Tank Management </title>
    @Scripts.Render("~/bundles/modernizr")
    <style>
        *,
        *:after,
        *:before {
            box-sizing: border-box;
        }

        .flex {
        display : flex;
    }

    .flex-row {
        flex-direction: row;
    }

    .flex-column {
        flex-direction : column;
    }
    .flex-item-scale {
        flex: 1 100px;
        justify-content: space-around;
    }
    .hide-scrollbar {
        overflow: hidden;
    }
 .sidebar {
     position: fixed;
     width: 16%;
     overflow-y: scroll;
     height: 100%;
     background:#D3CBC4; /* yellow under waterby */
 }
 .content {
    width: 84%;
    height: auto;
    outline: 1px solid;
    position: absolute;
    right: 0;
 }



 .tanks-display > ul {
     list-style : none;
 }

        .tanks-display > ul > li {
            height: 50px;
            box-shadow: inset 0px 1px 3px 0px #91b8b3;
            background: linear-gradient(to bottom, #768d87 5%, #6c7c7c 100%);
            filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#768d87', endColorstr='#6c7c7c',GradientType=0);
            background-color: #768d87;
            border-radius: 5px;
            border: 1px solid #566963;
            display: inline-block;
            cursor: pointer;
            color: #ffffff;
            font-family: Arial;
            font-size: 15px;
            font-weight: bold;
            width : 100%;
            text-decoration: none;
            text-shadow: 0px -1px 0px #2b665e;
        }

.tanks-display > ul > li :hover {
	background:linear-gradient(to bottom, #6c7c7c 5%, #768d87 100%);
	filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#6c7c7c', endColorstr='#768d87',GradientType=0);
	background-color:#6c7c7c;
}
.tanks-display > ul > li :active {
	position:relative;
	top:1px;
}

 .scale-to-container {
     max-width:90%;
    max-height:90%;
 }

 .scale-to-container-sm {
     max-width : 70%;
     max-height : 70%;
 }
        .tanks-toggle {
            position: relative;
            width: 100%;
            height: 150px;
            margin-bottom: 20px;
        }

        

</style>

</head>
<body>
    <div class="container body-content">
        <div class="hide-scrollbar">
        <section class="sidebar">
            <div>
                <div class="tanks-toggle flex flex-row">
                    <div id="active-tanks-toggle" class="flex-item-scale list-toggle-button active">
                        <img class="scale-to-container-sm"  src="~/Images/active-tanks.png" />
                    </div>
                    <div id="all-tanks-toggle" class="flex-item-scale list-toggle-button">
                        <img class="scale-to-container-sm" src="~/Images/all-tanks.png" />
                    </div>
                </div>
                <div class="tanks-display">
                    <ul>
                        @for (int i=0; i < ViewBag.ActiveTanks.Length; i++)
                        {
                            <li>
                                <a href="~/Home/Index/@ViewBag.ActiveTankIds[i].ToString()"> @ViewBag.ActiveTank </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </section>
        </div>
        <section class="content flex flex-column">
            <!--sidebar nav end-->
            @RenderBody()
        </section>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
